# Configurações do Banco de Dados
DATABASE_URL="postgresql://bioclub_user:bioclub_password@localhost:5432/bioclub_plus"
REDIS_URL="redis://localhost:6379"

# Configurações JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Configurações do Servidor
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"

# Configurações de Email (Nodemailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@bioclubplus.com"
FROM_NAME="BioClub+"

# Configurações OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# Configurações de Pagamento (Stripe)
STRIPE_PUBLIC_KEY="pk_test_your-stripe-public-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Configurações PIX (se usar gateway específico)
PIX_CLIENT_ID="your-pix-client-id"
PIX_CLIENT_SECRET="your-pix-client-secret"

# Configurações de Upload
UPLOAD_MAX_SIZE="10MB"
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf"

# Configurações de Comissão
DEFAULT_COMMISSION_RATE=0.30
COMMISSION_RELEASE_DAYS=15
MIN_WITHDRAWAL_AMOUNT=50.00

# Configurações de CEP (ViaCEP)
VIACEP_API_URL="https://viacep.com.br/ws"

# Configurações de Frete (Correios ou similar)
SHIPPING_API_URL="your-shipping-api-url"
SHIPPING_API_KEY="your-shipping-api-key"

# Configurações de Logs
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Sessão
SESSION_SECRET="your-session-secret"
SESSION_MAX_AGE=86400000

# URLs de Callback OAuth
GOOGLE_CALLBACK_URL="http://localhost:3001/auth/google/callback"
FACEBOOK_CALLBACK_URL="http://localhost:3001/auth/facebook/callback"
